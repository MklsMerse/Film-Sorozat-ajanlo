<Window x:Class="FilmFokuszAsztaliApp.UserListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Felhasználók listázása" Height="400" Width="600" Background="#F4FDFF">
    <Window.Resources>
        <Style TargetType="ListView">
            <Setter Property="Background" Value="#F4FDFF"/>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Background" Value="Brown"/>
        </Style>
    </Window.Resources>
    <Grid>
        <ListView Name="userListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Név" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>

