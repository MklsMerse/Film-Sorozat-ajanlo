<Window x:Class="FilmFokuszAsztaliApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmFokuszAsztaliApp"
        mc:Ignorable="d"
        Title="Bejelentkezés" Height="200" Width="300">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5,0,5,5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="5,0,5,5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Label>Felhasználónév:</Label>
            <TextBox Name="tbxLoginName"/>
            <Label>Jelszó:</Label>
            <PasswordBox Name="tbxPassword"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button x:Name="btnLogin"
                    Content="Bejelentkezés"
                    Click="btnLogin_Click"/>
            <Button x:Name="btnCancel"
                    Content="Mégse"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
